@using Candidates.Application.DTOs;
@model CandidateDTO
@{
    ViewData["Title"] = $"Update Candidate {Model.Name} {Model.Surname}";
}

<div class="text-center">
    <h1>Update candidate: #@Model.IdCandidate @Model.Name @Model.Surname</h1>
</div>

<form method="post" action="/Candidate/SubmitUpdateCandidate">
    <input type="number" hidden name="IdCandidate" value="@Model.IdCandidate" />
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="@Model.Name" required>
    </div>
    <div class="mb-3">
        <label for="surName" class="form-label">Surname</label>
        <input type="text" class="form-control" id="surName" name="surName" value="@Model.Surname" required>
    </div>
    <div class="mb-3">
        <label for="birtDate" class="form-label">Birt Date</label>
        <input type="date" class="form-control" id="birtDate" name="birtDate" value="@Model.BirtDate.ToString("yyyy-MM-dd")" required>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="@Model.Email" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>