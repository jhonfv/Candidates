@using Candidates.Application.DTOs;
@model IEnumerable<CandidateExperienceDto>

@{
    ViewData["Title"] = "Experiences List";
}

<div class="text-center">
    <h1>Experiences List</h1>
</div>
<div>
    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index" >Back</a>
    <a class="btn btn-primary" asp-controller="Experiences" asp-action="create" asp-route-IdCandidate="@ViewData["IdCandidate"]">Add</a>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Company</th>
            <th scope="col">Job</th>
            <th scope="col">Description</th>
            <th scope="col">Salary</th>
            <th scope="col">Begin Date</th>
            <th scope="col">End Date</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var experience in Model)
        {
            <tr>
                <th scope="row">@experience.IdCandidateExperience </th>
                <td>@experience.Company </td>
                <td>@experience.Job </td>
                <td>@experience.Description </td>
                <td>$@experience.Salary.ToString("##.00") </td>
                <td>@experience.BeginDate.ToString("dd/MM/yyyy") </td>
                <td>@experience.EndDate.ToString("dd/MM/yyyy") </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Experiences" asp-action="Update" asp-route-id="@experience.IdCandidateExperience">Edit</a>
                    <a class="btn btn-danger" asp-controller="Experiences" asp-action="Delete" asp-route-idCandidate="@ViewData["IdCandidate"]" asp-route-IdCandidateExperience="@experience.IdCandidateExperience">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>